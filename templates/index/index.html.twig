{% extends 'base.html.twig' %}

{% block title %}
  Hello IndexController!
{% endblock %}

{% block body %}
  <h1>
    Tareas por hacer
  </h1>
  {% include 'comunes/_mensajes.html.twig' %}
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">
          #
        </th>
        <th scope="col">
          Descripci√≥n
        </th>
        <th scope="col">
          Acciones
        </th>
      </tr>
    </thead>
    <tbody>
      {% for index, tarea in tareas %}
        <tr>
          <th scope="row">
            {{ index + 1 }}
          </th>
          <td class="descripcion">
            {% if tarea.finalizada %}
               <s>{{ tarea.descripcion }}</s>
            {% else %}
                {{ tarea.descripcion }}
            {% endif %}    
          </td>
          <td>
            <a href="{{
              path(
                'tarea_edit',
                {
                  id: tarea.id
                }
              )
              }}">
              editar
            </a>
            <a href="#"
              class="btn btn-link mg-3 finalizar"
              data-url="{{ path('finalizar_tarea', {'id': tarea.id}) }}"
              data-texto-contrario=" {{ tarea.finalizada ? 'Finalizar' : 'Desfinalizar' }}">
              {{ tarea.finalizada ? 'Desfinalizar' : 'Finalizar' }}
            </a>
          </td>
        </tr>
      {% else %}
        <tr>
          <th colspan="3" scope="row">
            No se han encontrado resultados
          </th>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  <div class="mt-3">
    {{
      include(
        'comunes/_paginacion.html.twig',
        {
          elementos_por_pagina: constant(
            'App\\Controller\\IndexController::ELEMENTOS_POR_PAGINA'
          ),
          numero_total_elementos: tareas.count,
          pagina_actual: pagina
        }
      )
    }}
  </div>
{% endblock %}
